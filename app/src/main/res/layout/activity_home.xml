<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:forceDarkAllowed="false"><![CDATA[
    tools:context=".HomeActivity">

    ]]>

    <ImageView
        android:id="@+id/idIVLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/qrcode" />

    <ImageView
        android:id="@+id/idIVMenu"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:src="@drawable/menu" />

    <Button
        android:id="@+id/idBtnGenerateQR"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/idIVLogo"
        android:layout_marginStart="55dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_back_new"
        android:text="Generate QR Code"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnScanQR"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/idIVLogo"
        android:layout_alignLeft="@+id/idBtnGenerateQR"
        android:layout_marginStart="160dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_back"
        android:layoutDirection="rtl"
        android:text="Scan QR Code"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnScanGallery"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/idBtnGenerateQR"
        android:layout_marginStart="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_back"
        android:text="Scan from Gallery"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnFollowUs"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/idBtnScanQR"
        android:layout_alignLeft="@+id/idBtnGenerateQR"
        android:layout_marginStart="160dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_back"
        android:layoutDirection="rtl"
        android:text="Follow Us"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:text="Developer : Debayan Chattopadhyay\nV:1.3.0"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/teal_200"
        android:textSize="12sp" />
</RelativeLayout>
